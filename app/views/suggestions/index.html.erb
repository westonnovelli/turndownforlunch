<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
    <%= bootstrap_flash %>
      <h1 class="page-header">Tables</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Suggestions
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="myTable">
              <thead>
                <tr>
                  <th>Place</th>
                  <th>Time</th>
                  <th>Votes</th>
                </tr>
              </thead>
              <tbody>
                <% @suggestions.each do |suggestion| %>
                <tr class="odd gradeX">
                  <td><%= suggestion.location %></td>
                  <td><%= suggestion.departure_time %></td>
                  <td>
                    <a class="popoverData" class="btn" href="#" data-template='<div class="popover" role="tooltip"><h3 class="popover-title"></h3><div class="popover-content"></div></div>' style="white-space:pre-wrap;" data-content= "James Bond \n Jonathan Miles" rel="popover" data-placement="right" data-original-title="People That Voted" data-trigger="hover"><%= suggestion.votes %></a>
                    <%= link_to vote_up_suggestion_path(suggestion), :class => "btn btn-mini btn-primary", :title => "Vote" do %>
                      <i class="glyphicon glyphicon-thumbs-up"></i>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div><!-- /.table-responsive -->
        </div>
      </div>
    </div>
<script>
$(document).ready(function(){
    $('#myTable').dataTable();
});

$('.popoverData').popover();
$('.popoverOption').popover({ trigger: "hover" });

$('popover-content').css("width","10px");


</script>
